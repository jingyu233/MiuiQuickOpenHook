<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 读取已安装应用列表权限 -->
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES"
        tools:ignore="QueryAllPackagesPermission" />

    <!-- 读取外部存储权限（用于选择图片） -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MiuiQuickOpenHook">

        <meta-data
            android:name="xposedmodule"
            android:value="true" />
        <meta-data
            android:name="xposedscope"
            android:resource="@array/module_scope" />
        <meta-data
            android:name="xposeddescription"
            android:value="MIUI快速打开自定义图标Hook模块" />
        <meta-data
            android:name="xposedminversion"
            android:value="93" />
        <meta-data
            android:name="xposedsharedprefs"
            android:value="true" />

        <!-- 启动页面 - 统一入口 -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MiuiQuickOpenHook">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 主页面 - LSPosed模块设置入口 -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MiuiQuickOpenHook">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="de.robv.android.xposed.category.MODULE_SETTINGS" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.activity.ConfigActivity"
            android:exported="false"
            android:label="配置管理"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".ui.activity.CustomIconManagementActivity"
            android:exported="false"
            android:label="自定义图标管理"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".ui.activity.IconEditorActivity"
            android:exported="false"
            android:label="图标编辑器"
            android:parentActivityName=".ui.activity.CustomIconManagementActivity" />

        <activity
            android:name=".ui.activity.AppPickerActivity"
            android:exported="false"
            android:label="选择应用"
            android:parentActivityName=".ui.activity.IconEditorActivity" />

    </application>

</manifest>